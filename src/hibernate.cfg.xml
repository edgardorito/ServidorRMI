<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration> 
    <session-factory>         
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>         
        <property name="connection.url">jdbc:mysql://localhost/juegormi</property>     
        <property name="connection.username">jeje</property>       
        <property name="connection.password">uno</property>     
        <property name="connection.pool_size">1</property>         
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>     
        <property name="show_sql">true</property>     
        <mapping class="hibernate.Usuario" />
        <mapping class="hibernate.Score" />     
        <mapping class="hibernate.Preguntas" />     
             
    </session-factory>
</hibernate-configuration>